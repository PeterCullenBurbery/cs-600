@model Time.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}
<h2>@ViewBag.Title.</h2>
<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
        <dt>External Logins:</dt>
        <dd>
            @Model.Logins.Count [
            @Html.ActionLink("Manage", "ManageLogins") ]
        </dd>
        <dt>Two-Factor Authentication:</dt>
        <dd>
            <p>
                There are no two-factor authentication providers configured. See <a href="https://go.microsoft.com/fwlink/?LinkId=403804">this article</a>
                for details on setting up this ASP.NET application to support two-factor authentication.
            </p>
        </dd>
    </dl>
    <h4>Personal Information</h4>
    <hr />
    @using (Html.BeginForm("UpdateBirthDetails", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.BirthDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BirthDate, new { @class = "form-control", @id = "birthDatePicker" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BirthTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BirthTime, new { @class = "form-control", @id = "birthTimePicker" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Update Birth Details</button>
            </div>
        </div>
    }
</div>
@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
    // Initialize Flatpickr for the Birth Date field
        flatpickr("#birthDatePicker", {
            dateFormat: "Y-m-d", // ISO format for binding to the model
        });

        // Initialize Flatpickr for the Birth Time field
        <script>
        // Initialize Flatpickr for the Birth Date field
            flatpickr("#birthDatePicker", {
                dateFormat: "Y-m-d", // ISO format for binding to the model
        });

            // Initialize Flatpickr for the Birth Time field with seconds enabled
            flatpickr("#birthTimePicker", {
                enableTime: true,
            noCalendar: true,
            dateFormat: "H:i:S", // Include seconds in the format
            time_24hr: true, // Optional: Use 24-hour format
            enableSeconds: true // Enables seconds input
        });
    </script>

}
